<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    android:id="@+id/design_CardView">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/design_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/design_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAlignment="center"
                android:hint="sadfasfas"
                android:textColor="#9E2523"
                android:textSize="18dp"
                android:layout_below="@+id/design_image"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/design_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/design_name"
                android:layout_marginTop="2dp"
                android:text="Product Price"
                android:textAlignment="center"
                android:textColor="#9E2523"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/design_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/design_category"
                android:text="Product Description"
                android:textAlignment="center"
                android:textColor="#9E2523"
                android:textSize="14dp"
                android:textStyle="italic" />

        </RelativeLayout>


</androidx.cardview.widget.CardView>